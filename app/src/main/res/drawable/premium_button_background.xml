<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_primary_end"
                android:endColor="@color/gradient_primary_start"
                android:angle="45"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/md_theme_onPrimary"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_primary_start"
                android:endColor="@color/gradient_primary_end"
                android:angle="45"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#80FFFFFF"/>
        </shape>
    </item>
</selector>