<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".ParentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Pesan Baru"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tulis pesan singkat..."
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:helperText="0/100 karakter"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMessageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:maxLength="100"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMessageIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tambahkan ikon (misal: ðŸ”, ðŸ§¸)"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:helperText="Pilih ikon untuk tugas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMessageIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="5"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saran Ikon:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginBottom="8dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum ada pesan yang dibuat"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:background="@drawable/stats_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Pesan Anda"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/emptyStateView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="60sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum ada pesan"
                    android:textSize="18sp"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat pesan pertama untuk anak Anda!"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onSurfaceVariant"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParentMessages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="80dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetAllMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ—‘ï¸ Reset Semua Pesan"
                android:backgroundTint="@color/md_theme_error"
                android:textColor="@color/md_theme_onError"
                app:cornerRadius="12dp"
                android:paddingVertical="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/md_theme_primary"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabCreateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="âœ¨ Buat Pesan"
        android:textColor="@color/md_theme_onPrimary"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/md_theme_onPrimary"
        app:backgroundTint="@color/md_theme_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>