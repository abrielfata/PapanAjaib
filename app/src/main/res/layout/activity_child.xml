<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".ChildActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/gradient_header_background">

            <!-- Title with Achievement Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ¨ Papan Ajaibmu! âœ¨"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onBackground"
                    android:gravity="center" />

                <!-- Achievement Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAchievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†"
                    android:textSize="24sp"
                    android:minWidth="56dp"
                    android:minHeight="56dp"
                    android:padding="8dp"
                    app:cornerRadius="28dp"
                    app:backgroundTint="@color/md_theme_primaryContainer"
                    android:textColor="@color/md_theme_onPrimaryContainer"
                    style="@style/Widget.Material3.Button.UnelevatedButton" />

            </LinearLayout>

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/progress_card_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_Progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 dari 0 tugas selesai"
                    android:textSize="16sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="16dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="@color/md_theme_primary"
                    android:progressBackgroundTint="@color/md_theme_surfaceVariant" />

            </LinearLayout>

        </LinearLayout>

        <!-- Swipe to Refresh Container -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_RefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Messages RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ChildMessages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:overScrollMode="never" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyStateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:alpha="0.7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ˜´"
                        android:textSize="80sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belum ada tugas nih!"
                        android:textSize="18sp"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minta Papa/Mama buat tugas baru ya!"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <!-- Loading Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/md_theme_primary" />

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

    <!-- Celebration Overlay -->
    <FrameLayout
        android:id="@+id/celebration_Overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/celebrationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸŽ‰ HEBAT! ðŸŽ‰"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </FrameLayout>

    <!-- All Tasks Completed Celebration -->
    <LinearLayout
        android:id="@+id/all_TasksCompletedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/celebration_background"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:alpha="0"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="80sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEMUA TUGAS SELESAI!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamu hebat banget! ðŸŒŸ"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>