<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/primary_cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Minimal Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <View
                android:layout_width="4dp"
                android:layout_height="32dp"
                android:background="@color/primary_medium_blue"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papan Ajaib"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark_navy"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Task Manager"
                    android:textSize="14sp"
                    android:textColor="@color/primary_medium_blue"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Family Info Card - Minimal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_light_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    android:textSize="12sp"
                    android:textColor="@color/primary_medium_blue"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFamilyInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading family information..."
                    android:textSize="15sp"
                    android:textColor="@color/primary_dark_navy"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status - Minimal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/stats_background"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/stats_background"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Checking status..."
                android:textSize="13sp"
                android:textColor="@color/primary_dark_navy" />

        </LinearLayout>

        <!-- Action Buttons - Clean -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnParentMode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Parent Mode"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/primary_medium_blue"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                app:strokeWidth="0dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChildMode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Child Mode"
                android:textSize="16sp"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/primary_medium_blue"
                app:strokeWidth="1dp"
                android:textColor="@color/primary_dark_navy"
                app:cornerRadius="8dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Settings - Minimal -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetFamily"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Settings"
            android:textSize="14sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.TextButton"
            android:textColor="@color/primary_medium_blue"
            android:layout_marginBottom="32dp" />

        <!-- Tips - Minimal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/modern_tips_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textSize="12sp"
                android:textColor="@color/primary_medium_blue"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share family code to invite members • Parents manage tasks • Children complete assignments"
                android:textSize="14sp"
                android:textColor="@color/primary_dark_navy"
                android:lineSpacingExtra="3dp"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>