<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/md_theme_surface">

    <!-- Header dengan info keluarga -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/md_theme_primaryContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvFamilyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keluarga Kita\nKode: ABC123"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onPrimaryContainer"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login sebagai: Orang Tua\nEmail: user@example.com"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onPrimaryContainer"
                android:alpha="0.8" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Logo Aplikasi -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="16dp"
        android:contentDescription="App logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papan Ajaib ✨"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papan pengumuman digital untuk keluarga"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:layout_marginBottom="48dp" />

    <!-- Tombol Mode -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnParentMode"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:text="Mode Orang Tua"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/ic_parent_icon"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChildMode"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:text="Lihat Tugas"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        app:icon="@drawable/ic_child_icon"
        app:iconGravity="textStart" />

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="🚪 Logout"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:strokeColor="@color/md_theme_error"
        android:textColor="@color/md_theme_error"
        app:icon="@drawable/ic_logout"
        app:iconTint="@color/md_theme_error" />

    <!-- Reset Button untuk Testing -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResetFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️ Reset Keluarga (Testing)"
        android:textSize="10sp"
        android:visibility="gone"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="@color/md_theme_error" />

</LinearLayout>