<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/parent_theme_surfaceVariant"
    app:cardBackgroundColor="@color/parent_theme_surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Icon and Status Indicator Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Message Icon with Background -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/icon_circle_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/tvMessageIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    tools:text="🍔" />

            </LinearLayout>

            <!-- Message Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMessageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/parent_theme_onSurface"
                    android:layout_marginBottom="6dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Rapikan mainanmu sebelum tidur" />

                <TextView
                    android:id="@+id/tvMessageStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/parent_theme_onSurfaceVariant"
                    android:background="@color/parent_theme_tertiaryContainer"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    app:cornerRadius="6dp"
                    tools:text="⏳ Dibuat pada 15/08 14:30" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/parent_theme_surfaceVariant"
            android:layout_marginVertical="8dp"
            android:alpha="0.3"/>

        <!-- Action Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:minWidth="0dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                app:cornerRadius="10dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/parent_theme_error"
                android:textColor="@color/parent_theme_error"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/parent_theme_error"
                app:iconGravity="textStart"
                app:iconSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Subtle gradient overlay for depth -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sparkle_overlay"
        android:alpha="0.05"/>

</com.google.android.material.card.MaterialCardView>